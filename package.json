{
  "name": "dts-element",
  "version": "0.0.0-dev",
  "description": "A DOM library for generation TypeScript declaration (.d.ts) files",
  "main": "index.js",
  "repository": "https://github.com/ikatyang/dts-element",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.json",
    "lint": "tslint src/**/* --type-check --project ./tsconfig.json",
    "test": "jest --config ./jest.json",
    "test-coverage": "yarn run test -- --coverage",
    "posttest-coverage": "cat ./coverage/remapped/coverage.txt"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "jest": "19.0.2",
    "ts-jest": "19.0.10",
    "tslint": "5.1.0",
    "tslint-config-ikatyang": "0.2.0",
    "typescript": "2.3.0-dev.20170422"
  }
}
