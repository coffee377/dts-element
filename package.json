{
  "name": "dts-element",
  "version": "1.0.0",
  "description": "A DOM library for generation TypeScript declaration (.d.ts) files",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "https://github.com/ikatyang/dts-element",
  "homepage": "https://ikatyang.github.io/dts-element/",
  "author": "ikatyang",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf ./lib",
    "build": "tsc -p ./tsconfig.build.json",
    "lint": "tslint --type-check --project ./tsconfig.json",
    "jest": "jest --config ./jest.json",
    "test": "yarn run jest -- --verbose",
    "test-coverage": "yarn run jest -- --coverage",
    "posttest-coverage": "cat ./coverage/remapped/coverage.txt",
    "coverage-ci": "codecov",
    "pretypedoc": "rm -rf ./node_modules/typedoc/node_modules/typescript && rm -rf ./docs",
    "typedoc": "typedoc --name \"dts-element v$npm_package_version\" --out ./docs --mode file --exclude '**/{__mocks__,__tests__,tests,helpers,utils}/**/*' --excludeExternals --excludePrivate --gitRevision \"v$npm_package_version\"",
    "postpublish": "yarn run typedoc"
  },
  "devDependencies": {
    "@types/jest": "19.2.2",
    "codecov": "2.1.0",
    "jest": "19.0.2",
    "ts-jest": "19.0.10",
    "tslint": "5.1.0",
    "tslint-config-ikatyang": "0.2.0",
    "typedoc": "0.6.0",
    "typescript": "2.3.2"
  }
}
